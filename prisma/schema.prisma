generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(cuid())
  email    String  @unique
  name     String?
  image    String?
  provider String
  plan     Plan    @default(FREE)
  deals    Deal[]
  leads    Lead[]
}

model Lead {
  id        String   @id @default(cuid())
  name      String
  email     String?
  phone     String
  status    Status   @default(New)
  userId    String
  createdAt DateTime @default(now())
  owner     String?
  deal      Deal?
  user      User     @relation(fields: [userId], references: [id])
}

model Deal {
  id        String   @id @default(cuid())
  amount    Float
  name      String
  notes     String?
  owner     String?
  stage     String   @default("New")
  leadId    String   @unique
  userId    String
  createdAt DateTime @default(now())
  email     String?
  lead      Lead     @relation(fields: [leadId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id])

  workflowLogs WorkflowLog[]
}

model WorkflowLog {
  id        String   @id @default(cuid())
  dealId    String
  trigger   String
  action    String
  status    String
  createdAt DateTime @default(now())

  deal Deal @relation(fields: [dealId], references: [id])
}

enum Status {
  New
  Contacted
  InProgress
  Qualified
  Converted
  Unqualified
  Lost
}

enum Plan {
  FREE
  PAID
}
