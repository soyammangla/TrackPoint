generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  name        String
  email       String   @unique
  plan        String   @default("free") // free / paid
  clientLimit Int      @default(5)
  clients     Client[]
  deals       Deal[] // ‚Üê ye add karo
}

model Client {
  id      Int    @id @default(autoincrement())
  name    String
  email   String
  phone   String
  ownerId Int
  owner   User   @relation(fields: [ownerId], references: [id])
}

model Deal {
  id      Int    @id @default(autoincrement())
  name    String
  email   String
  amount  String
  stage   String
  ownerId Int
  owner   User   @relation(fields: [ownerId], references: [id])
}

model Workflow {
  id      Int      @id @default(autoincrement())
  name    String
  trigger String
  actions String[]
  active  Boolean  @default(true)
}

enum Provider {
  Google
}
