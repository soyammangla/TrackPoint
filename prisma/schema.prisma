datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String @id @default(cuid())
  email    String @unique
  name     String?
  image    String?
  provider String
  plan     Plan @default(FREE)
  leads    Lead[]
  deals    Deal[]
}

model Lead {
  id        String   @id @default(cuid())
  name      String
  email     String?
  phone     String
  status    Status   @default(New)
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  deal      Deal?
  createdAt DateTime @default(now())
}

model Deal {
  id        String  @id @default(cuid())
  amount    Float
  name      String
  email     String?
  notes     String?
  owner     String?
  stage     String  @default("New")
  leadId    String  @unique
  lead Lead @relation(fields: [leadId], references: [id], onDelete: Cascade)
  userId    String
  user      User    @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

enum Status {
  New
  Contacted
  InProgress
  Qualified
  Converted
  Unqualified
  Lost
}

enum Plan {
  FREE
  PAID
}
